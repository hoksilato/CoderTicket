<%= simple_form_for @user, :url => create_user_path do |f| %>

  <div class="col-md-12 col-sm-12">
    <div class="form-group">
      <%= f.input :name, placeholder: 'Name', class: 'form-control', required: 'required' %>
    </div>
  </div>

  <div class="col-md-12 col-sm-12">
    <div class="form-group">
      <%= f.input :email, placeholder: 'Email', class: 'form-control', required: 'required' %>
    </div>
  </div>

  <div class="col-md-12 col-sm-12">
    <div class="form-group">
      <%= f.input :password, placeholder: 'Password', class: 'form-control', required: 'required' %>
    </div>
  </div>

  <div class="col-md-12 col-sm-12">
    <div class="form-group">
      <%= f.input :password_confirmation, placeholder: 'Password Confirmation', class: 'form-control', required: 'required' %>
    </div>
  </div>

  <div class="col-md-4 col-xs-12">
    <%= f.submit 'Register', class: 'btn btn-primary' %>
  </div>

<% end %>